{
    "name": "copyshards.com",
    "description": "Browser extension for better and smarter text copying",
    "version": "0.1",
    "manifest_version": 3,

    "permissions": ["storage", "tabs", "background", "contextMenus", "clipboardWrite" ],
    "action": {
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "/extension/background.js",
        "type": "module"
      }

   


      
  }